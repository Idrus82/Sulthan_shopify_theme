{%- liquid
  assign title = 'general.404.title' | t
  assign subtext = 'general.404.subtext_html' | t
  assign buttonlabel = 'general.404.button_label' | t
  assign shop_url = shop.secure_url

  if section.settings.title != ""
    assign title = section.settings.title
  endif

  if section.settings.subtext_title != ""
    assign subtext = section.settings.subtext_title
  endif

  if section.settings.button_label != ""
    assign buttonlabel = section.settings.button_label
  endif

  if section.settings.button_url
    assign shop_url = section.settings.button_url
  endif
-%}

<div class="max-w-md">
  <div class="my-4">
    <h1 class="text-5xl font-bold">{{ title }}</h1>
  </div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">{{ subtext }}</p>
  </div>
  <div class="my-4">
    <a
      href="{{ shop_url }}"
      class="px-4 py-2 inline text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white"
    >
      {{ buttonlabel }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "404 Heading title",
      "placeholder": "Add heading text for 404 page"
    },
    {
      "type": "text",
      "id": "subtext_title",
      "label": "404 Subtext title",
      "placeholder": "Add Subtext text for 404 page"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "placeholder": "Add Button label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ]
}
{% endschema %}
